<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Say Hello!"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/say-hello"
            android:background="@android:color/holo_blue_bright" android:onClick="sayHello"
            android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="160dp"/>
    <Button
            android:text="Log Parking Space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="logSpace" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@+id/parkingSpaces" android:layout_marginStart="124dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="124dp"/>
    <TextView
            android:text="Parking Spaces Left:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parkingSpacesLeft"
            app:layout_constraintTop_toBottomOf="@+id/say-hello" android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parkingSpaces" android:textSize="30sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="@+id/parkingSpacesLeft"
            android:layout_marginStart="196dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="196dp"/>
    <Button
            android:text="Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:background="@android:color/holo_red_light" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginStart="160dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="160dp" android:onClick="gotoDash"/>

</android.support.constraint.ConstraintLayout>